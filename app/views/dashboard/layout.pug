                    li.nav-item
                        a.nav-link(data-widget="control-sidebar" data-slide="true" href="#")
                            i.fa.fa-th-large
            // .navbar end
            // Main Sidebar Container
            aside.main-sidebar.sidebar-dark-primary.elevation-4
