            .col-lg-4.mt-5.mt-lg-0
                .section.mb-5.pb-0
                    .section-title.h2 آخرین اخبار

                    //news
                .news
                    // News 01
                    .news_post
                        .news_post_image
                            img(src="/images/news_1.jpg" alt="https://unsplash.com/@beccatapert")
                        .news_post_body
                            .news_post_date دوشنبه 8 بهمن 1397
